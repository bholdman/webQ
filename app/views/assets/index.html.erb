<h1>Listing assets</h1>

<table>
  <tr>
    <th>Data file name</th>
    <th>Data content type</th>
    <th>Data file size</th>
    <th>Attachable</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assets.each do |asset| %>
  <tr>
    <td><%= asset.data_file_name %></td>
    <td><%= asset.data_content_type %></td>
    <td><%= asset.data_file_size %></td>
    <td><%= asset.attachable %></td>
    <td><%= link_to 'Show', asset %></td>
    <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
    <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

