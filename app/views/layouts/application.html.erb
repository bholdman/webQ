<!DOCTYPE html>
<html>
<head>
  <title>Help</title>
  <%= javascript_include_tag :defaults,"nested_form" %>
  <%= stylesheet_link_tag    "application", "jquery-ui-1.8.23.custom.css", "token-input", :media => "all" %>
  <%= javascript_include_tag "jquery-1.8.0.min.js", "jquery-ui-1.8.23.custom.min.js", "application", "jquery.tokeninput" %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag 'prototype' %>
</head>
<body>
<div id="header">
	<div id="account_info">
		<%=link_to  (image_tag avatar_url(session[:username]), :size => "32x32"), user_path(session[:username]) %>
		<div class="info">
			<b>Welcome, </b> <b class="red"><%= link_to session[:fullName], user_path(session[:username])  %></b>
		</div>
		<div class="logout">
			<%= link_to 'Logout', logout_path  %>
		</div>
	</div>
</div>
<div id="sidebar">
     <%= link_to "Web Design & Support", "/", :id => "logo" %>
	 
	 <div id="menu">
      <ul id="nav">
       <li><%= link_to "Tickets", tickets_path %></li>
	   <% if admin? %>
       <li><%= link_to "Departments", tickets_path %></li>
       <li><%= link_to "Users", users_path %></li>
	   <% end %>
      </ul>
    </div>
</div>

<div id="content">
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :class => "flash_#{name}" %>
<% end %>
<%= yield %>
</div>
</body>
</html>
